<div class="card text-center my-3 col-md-4 col-xs-12" style="max-width:30%; min-width:18rem;">
  <%= image_tag image_for(listing) , alt: "#{listing.title} image", class: 'card-img-top img_fluid' %>
  <div class="card-body">
    <h5 class="card-title"><%= listing.title %></h5>
    <p class="card-text"><%= listing.description %></p>
    <%= link_to 'View', listing_path(listing), class: 'btn btn-primary' %>
  </div>
</div>