<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>
<h1><%= @listing.title %></h1>
<p><%= @listing.description %></p>
<% if @listing.picture.attached?%>
<%= image_tag @listing.picture.service_url, class:'background'%>
<% end %>


<div>
<%= link_to "Edit", edit_listing_path(@listing.id) %>
<%= link_to "Delete a item", listing_path(@listing.id), method: :delete %>
<%= link_to "Back", :back %>
</div>