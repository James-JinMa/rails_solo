<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>
<h1><%= @listing.title %></h1>
<p><%= @listing.description %></p>
<p>Price: <%= number_to_currency(@listing.deposit / 100.0) %></p> 
<% if @listing.picture.attached?%>
<%= image_tag @listing.picture.service_url, class:'background'%>
<% end %>


<div>

<% if user_signed_in? && @listing.sold == false && @listing.user.id != current_user.id %>
  <%= link_to "Add to cart", carts_path(listing_id: @listing.id), method: :post, class: "btn btn-outline-success"  %>
<% end %>
  <%= link_to "Back", listings_path, class: "btn btn-outline-secondary" %>
</div>
